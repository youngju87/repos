{
  "name": "analytics-validation-tool",
  "version": "0.1.0",
  "description": "Production-grade analytics validation platform for scanning websites, detecting analytics tags, and validating implementations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "example": "npx ts-node examples/basic-scan.ts",
    "example:detection": "npx ts-node examples/tag-detection.ts",
    "example:validation": "npx ts-node examples/validation.ts",
    "example:ci": "npx ts-node examples/ci-cd-integration.ts",
    "scan": "npx ts-node examples/basic-scan.ts",
    "validate": "npx ts-node examples/validation.ts",
    "install:browsers": "npx playwright install chromium",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "analytics",
    "validation",
    "testing",
    "google-analytics",
    "adobe-analytics",
    "gtm",
    "tag-manager",
    "datalayer",
    "playwright",
    "web-scraping",
    "qa",
    "audit"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": ""
  }
}
